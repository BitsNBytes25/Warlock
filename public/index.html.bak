                    }
                ]
            },
            'player-management': {
                title: 'Player Management',
                description: 'Manage players, bans, and permissions',
                icon: 'fas fa-users',
                endpoint: '/player-management',
                inputs: [
                    {
                        type: 'select',
                        name: 'server_id',
                        label: 'Select Server',
                        options: [
                            { value: 'minecraft-001', label: 'Minecraft Server #001' },
                            { value: 'rust-002', label: 'Rust Server #002' },
                            { value: 'csgo-003', label: 'CS:GO Server #003' }
                        ],
                        required: true
                    },
                    {
                        type: 'select',
                        name: 'action',
                        label: 'Action',
                        options: [
                            { value: 'list_players', label: 'List Online Players' },
                            { value: 'kick_player', label: 'Kick Player' },
                            { value: 'ban_player', label: 'Ban Player' },
                            { value: 'unban_player', label: 'Unban Player' },
                            { value: 'list_bans', label: 'List Banned Players' }
                        ],
                        required: true
                    },
                    {
                        type: 'text',
                        name: 'player_name',
                        label: 'Player Name (if applicable)',
                        placeholder: 'PlayerName123',
                        required: false
                    }
                ]
            },
            'server-monitor': {
                title: 'Server Monitoring',
                description: 'Monitor server performance, resources, and status',
                icon: 'fas fa-chart-line',
                endpoint: '/server-monitor',
                inputs: [
                    {
                        type: 'select',
                        name: 'monitor_type',
                        label: 'Monitor Type',
                        options: [
                            { value: 'performance', label: 'Performance Stats' },
                            { value: 'player_count', label: 'Player Count' },
                            { value: 'resource_usage', label: 'Resource Usage' },
                            { value: 'server_logs', label: 'Recent Server Logs' }
                        ],
                        required: true
                    },
                    {
                        type: 'select',
                        name: 'server_id',
                        label: 'Select Server (optional)',
                        options: [
                            { value: 'all', label: 'All Servers' },
                            { value: 'minecraft-001', label: 'Minecraft Server #001' },
                            { value: 'rust-002', label: 'Rust Server #002' },
                            { value: 'csgo-003', label: 'CS:GO Server #003' }
                        ],
                        required: false
                    }
                ]
            },
            'backup-restore': {
                title: 'Backup & Restore',
                description: 'Create backups and restore game server data',
                icon: 'fas fa-save',
                endpoint: '/backup-restore',
                inputs: [
                    {
                        type: 'select',
                        name: 'server_id',
                        label: 'Select Server',
                        options: [
                            { value: 'minecraft-001', label: 'Minecraft Server #001' },
                            { value: 'rust-002', label: 'Rust Server #002' },
                            { value: 'csgo-003', label: 'CS:GO Server #003' }
                        ],
                        required: true
                    },
                    {
                        type: 'select',
                        name: 'action',
                        label: 'Action',
                        options: [
                            { value: 'create_backup', label: 'Create Backup' },
                            { value: 'restore_backup', label: 'Restore from Backup' },
                            { value: 'list_backups', label: 'List Available Backups' },
                            { value: 'delete_backup', label: 'Delete Backup' }
                        ],
                        required: true
                    },
                    {
                        type: 'text',
                        name: 'backup_name',
                        label: 'Backup Name (for create/restore)',
                        placeholder: 'backup_2024_11_09',
                        required: false
                    }
                ]
            }
        };

        // DOM elements
        const commandList = document.getElementById('commandList');
        const commandTitle = document.getElementById('commandTitle');
        const commandDescription = document.getElementById('commandDescription');
        const dynamicInputs = document.getElementById('dynamicInputs');
        const commandForm = document.getElementById('commandForm');
        const executeBtn = document.getElementById('executeBtn');
        const terminalOutput = document.getElementById('terminalOutput');
        const statusContainer = document.getElementById('statusContainer');

        let currentCommand = 'create-server';

        // Initialize the interface
        function init() {
            setupCommandList();
            loadCommand(currentCommand);
        }

        // Setup command list event handlers
        function setupCommandList() {
            commandList.addEventListener('click', (e) => {
                const item = e.target.closest('.command-item');
                if (item) {
                    // Update active state
                    document.querySelectorAll('.command-item').forEach(i => i.classList.remove('active'));
                    item.classList.add('active');
                    
                    // Load command
                    const commandId = item.dataset.command;
                    loadCommand(commandId);
                }
            });
        }

        // Load command configuration
        function loadCommand(commandId) {
            currentCommand = commandId;
            const config = commands[commandId];
            
            // Update header
            commandTitle.innerHTML = `<i class="${config.icon}"></i> ${config.title}`;
            commandDescription.textContent = config.description;
            
            // Generate dynamic inputs
            generateInputs(config.inputs);
            
            // Clear terminal
            clearTerminal();
            clearStatus();
        }

        // Generate dynamic input fields
        function generateInputs(inputs) {
            dynamicInputs.innerHTML = '';
            
            inputs.forEach(input => {
                const formGroup = document.createElement('div');
                formGroup.className = 'form-group';
                
                if (input.type === 'checkbox') {
                    formGroup.innerHTML = `
                        <label>
                            <input type="checkbox" name="${input.name}" ${input.checked ? 'checked' : ''}>
                            ${input.label}
                        </label>
                    `;
                } else {
                    const label = document.createElement('label');
                    label.textContent = input.label;
                    formGroup.appendChild(label);
                    
                    if (input.type === 'select') {
                        const select = document.createElement('select');
                        select.name = input.name;
                        select.required = input.required || false;
                        
                        input.options.forEach(option => {
                            const optionEl = document.createElement('option');
                            optionEl.value = option.value;
                            optionEl.textContent = option.label;
                            select.appendChild(optionEl);
                        });
                        
                        formGroup.appendChild(select);
                    } else if (input.type === 'textarea') {
                        const textarea = document.createElement('textarea');
                        textarea.name = input.name;
                        textarea.placeholder = input.placeholder || '';
                        textarea.required = input.required || false;
                        textarea.rows = 4;
                        formGroup.appendChild(textarea);
                    } else {
                        const inputEl = document.createElement('input');
                        inputEl.type = input.type;
                        inputEl.name = input.name;
                        inputEl.placeholder = input.placeholder || '';
                        inputEl.required = input.required || false;
                        
                        // Set additional attributes for number inputs
                        if (input.type === 'number') {
                            if (input.min !== undefined) inputEl.min = input.min;
                            if (input.max !== undefined) inputEl.max = input.max;
                            if (input.step !== undefined) inputEl.step = input.step;
                        }
                        
                        formGroup.appendChild(inputEl);
                    }
                }
                
                dynamicInputs.appendChild(formGroup);
            });
        }

        // Handle form submission
        commandForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const config = commands[currentCommand];
            const formData = new FormData(commandForm);
            const data = Object.fromEntries(formData.entries());
            
            // Add command type to data
            data.command = currentCommand;
            
            await executeCommand(config.endpoint, data);
        });

        // Execute command
        async function executeCommand(endpoint, data) {
            // Show loading state
            showStatus('Executing command...', 'loading');
            executeBtn.disabled = true;
            executeBtn.innerHTML = '<div class="loading-spinner"></div> Executing...';
            
            // Show command in terminal
            showInTerminal(`$ Executing ${commands[currentCommand].title}...`, 'command-prompt');
            
            try {
                const response = await fetch(endpoint, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showStatus('Command executed successfully!', 'success');
                    showInTerminal(result.output, 'output-text');
                } else {
                    showStatus('Command execution failed!', 'error');
                    showInTerminal(`Error: ${result.output}`, 'error-text');
                    if (result.stderr) {
                        showInTerminal(`STDERR: ${result.stderr}`, 'error-text');
                    }
                }
            } catch (error) {
                showStatus('Network error occurred!', 'error');
                showInTerminal(`Network Error: ${error.message}`, 'error-text');
            } finally {
                // Reset button state
                executeBtn.disabled = false;
                executeBtn.innerHTML = '<i class="fas fa-play"></i> Execute Command';
            }
        }

        // Show status message
        function showStatus(message, type) {
            const iconMap = {
                'success': 'fas fa-check-circle',
                'error': 'fas fa-exclamation-circle',
                'loading': 'fas fa-spinner fa-spin'
            };
            
            statusContainer.innerHTML = `
                <div class="status-badge ${type}">
                    <i class="${iconMap[type]}"></i>
                    ${message}
                </div>
            `;
        }

        // Clear status
        function clearStatus() {
            statusContainer.innerHTML = '';
        }

        // Show content in terminal
        function showInTerminal(content, className = 'output-text') {
            const div = document.createElement('div');
            div.className = className;
            div.textContent = content;
            terminalOutput.appendChild(div);
            
            // Scroll to bottom
            terminalOutput.scrollTop = terminalOutput.scrollHeight;
        }

        // Clear terminal
        function clearTerminal() {
            terminalOutput.innerHTML = '';
        }

        async function getServices() {
            clearTerminal();
            addTerminalLine('> Executing: ./manage.py --get-services', 'command');
            addTerminalLine('Connecting to remote server...', 'info');
            
            getServicesBtn.disabled = true;
            getServicesBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Running...';

            try {
                const response = await fetch('/get-services', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();
                
                console.log('Get Services Result:', result);
                
                if (result.success) {
                    addTerminalLine('Command executed successfully:', 'success');
                    addTerminalLine('');
                    
                    // Split output by lines and display each
                    const outputLines = result.output.split('\n');
                    outputLines.forEach(line => {
                        if (line.trim()) {
                            addTerminalLine(line);
                        }
                    });
                    
                    if (result.stderr) {
                        addTerminalLine('');
                        addTerminalLine('Warnings/Errors:', 'warning');
                        result.stderr.split('\n').forEach(line => {
                            if (line.trim()) {
                                addTerminalLine(line, 'error');
                            }
                        });
                    }
                } else {
                    addTerminalLine('Command failed:', 'error');
                    addTerminalLine(result.error || 'Unknown error', 'error');
                    if (result.output) {
                        addTerminalLine('');
                        addTerminalLine('Output:', 'warning');
                        addTerminalLine(result.output);
                    }
                }
            } catch (error) {
                console.error('Network error:', error);
                addTerminalLine('Network error: ' + error.message, 'error');
            } finally {
                getServicesBtn.disabled = false;
                getServicesBtn.innerHTML = '<i class="fas fa-play"></i> Get Services';
            }
        }

        getServicesBtn.addEventListener('click', getServices);
    </script>
</body>
